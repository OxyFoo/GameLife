{
    "compilerOptions": {
        "jsx": "react-native",
        "target": "ES6",
        "checkJs": true,
        "strict": true,
        "resolveJsonModule": true,
        "module": "NodeNext",
        "baseUrl": "src",
        "paths": {
            "Ressources/*": [
                "../res/*"
            ],
            "Types/*": [
                "../src/Types/*"
            ]
        },
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "Types"
    ]
}